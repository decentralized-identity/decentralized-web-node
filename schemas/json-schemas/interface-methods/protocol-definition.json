{
  "$id": "https://identity.foundation/dwn/json-schemas/protocol-definition.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "protocol",
    "published",
    "types",
    "structure"
  ],
  "properties": {
    "protocol": {
      "type": "string"
    },
    "published": {
      "type": "boolean"
    },
    "types": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "schema": {
              "type": "string"
            },
            "dataFormats": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "structure": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "$ref": "https://identity.foundation/dwn/json-schemas/protocol-rule-set.json"
        }
      }
    }
  }
}